        <screen default="true" name="default">
            <staticElements>
                <StatusBar />
                <!-- you can use spaces if the + otherwise would be on the left -->
                <cell x="10" y="30" name="title">Default Title</cell>
                <cell x="10" y="50" name="subtitle">Default Subtitle</cell>
